<?xml version="1.0"?>

<launch>
  <arg name="robot_prefix" default=""/>

  <node pkg="joint_state_publisher" exec="joint_state_publisher"/>

  <!-- Publish robot_description & tf -->
  <node pkg="robot_state_publisher" exec="robot_state_publisher">
    <param name="robot_description" value="$(command 'xacro $(find-pkg-share packman_description)/urdf_xacro/robot.urdf.xacro')"/>
  </node>

  <!-- Spawn the robot using the urdf_xacro -->
  <node pkg="gazebo_ros" exec="spawn_entity.py" args="-topic robot_description -entity robot -x 5 -y 10 -Y 1.57" output="screen"/>

