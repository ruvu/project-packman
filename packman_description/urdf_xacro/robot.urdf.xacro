<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">
  <xacro:arg name="robot_name" default="" />

  <xacro:include filename="$(find packman_description)/urdf_xacro/robot.gazebo" />

  <!-- Base -->
  <link name="$(arg robot_name)/base_link">
    <collision name="collision">
      <origin xyz="0.225 0 0.085" rpy="0 0 0"/>
      <geometry>
        <box size="0.7 0.5 0.13"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia
        ixx="0.01" ixy="0.0" ixz="0.0"
        iyy="0.01" iyz="0.0"
        izz="0.01"/>
    </inertial>
    <visual>
      <origin xyz="0.225 0 0.085" rpy="0 0 0"/>
      <geometry>
        <box size="0.7 0.5 0.13"/>
      </geometry>
    </visual>
    <visual>
      <origin xyz="0.035 0 0.17" rpy="0 0 0"/>
      <geometry>
        <box size="0.32 0.5 0.04"/>
      </geometry>
    </visual>
    <visual>
      <origin xyz="0.225 0 0.215" rpy="0 0 0"/>
      <geometry>
        <box size="0.7 0.5 0.05"/>
      </geometry>
    </visual>
  </link>

  <!-- Left drive -->
  <joint name="$(arg robot_name)/left_drive" type="revolute">
    <parent link="$(arg robot_name)/base_link"/>
    <child link="$(arg robot_name)/left_wheel_link"/>
    <origin xyz="0 0.23 0.07525" rpy="${pi / 2} 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="${-pi}" upper="${pi}" effort="10.0" velocity="30"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="$(arg robot_name)/left_wheel_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.155" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <!-- Right drive -->
  <joint name="$(arg robot_name)/right_drive" type="revolute">
    <parent link="$(arg robot_name)/base_link"/>
    <child link="$(arg robot_name)/right_wheel_link"/>
    <origin xyz="0 -0.23 0.07525" rpy="${pi / 2} 0 0 "/>
    <axis xyz="0 0 -1"/>
    <limit lower="${-pi}" upper="${pi}" effort="10.0" velocity="30"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="$(arg robot_name)/right_wheel_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.155" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <!-- Laser -->
  <joint name="$(arg robot_name)/laser_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0.47 0 0.17" rpy="0 0 0"/>
    <parent link="$(arg robot_name)/base_link"/>
    <child link="$(arg robot_name)/laser_link"/>
  </joint>

  <link name="$(arg robot_name)/laser_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
    </visual>
  </link>
</robot>
